+++ b/fs/namei.c
@@ -2170,7 +2170,7 @@ static inline u64 hash_name(const void *salt, const char *name)
 inside:
 		a = load_unaligned_zeropad(name+len);
 		b = a ^ REPEAT_BYTE('/');
-	} while (!(has_zero(a, &adata, &constants) | has_zero(b, &bdata, &constants)));
